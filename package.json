{
  "name": "ooniprobe-desktop",
  "description": "OONI Probe Desktop app",
  "author": "Open Observatory of Network Interference (OONI) <contact@openobservatory.org>",
  "productName": "OONI Probe",
  "version": "0.0.1",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "ooni/probe-desktop",
  "scripts": {
    "start": "electron -r babel-register .",
    "build": "next build renderer && next export renderer",
    "pack": "npm run build && build -mw",
    "pack:win": "npm run build && build --win --x64",
    "pack:mac": "npm run build && build --mac",
    "dist": "npm run build && build --dir -mw",
    "electron-rebuild": "electron-rebuild",
    "icon-gen": "icon-gen -i static/Icon-Color.svg -o main/static/icons -r -m ico,icns",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "io.ooni.ooniprobe-desktop",
    "asar": false,
    "files": [
      "**/*",
      "!bin",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "main/static/icons/app.ico",
      "extraFiles": [
        {
          "from": "./bin/win_x64/ooni.exe",
          "to": "./resources/bin/ooni.exe"
        },
        {
          "from": "./bin/cert.pem",
          "to": "./resources/cert.pem"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.tools",
      "icon": "main/static/icons/app.icns",
      "extraFiles": [
        {
          "from": "./bin/mac_x64/ooni",
          "to": "./Resources/bin/ooni"
        },
        {
          "from": "./bin/cert.pem",
          "to": "./Resources/cert.pem"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-inline-react-svg": "^0.4.0",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "electron": "1.8.4",
    "electron-builder": "19.22.1",
    "electron-rebuild": "^1.7.3",
    "icon-gen": "^1.2.1",
    "next": "4.2.3",
    "react": "16",
    "react-dom": "16",
    "sudo-prompt": "^7.1.1"
  },
  "dependencies": {
    "app-root-path": "2.0.1",
    "chokidar": "^1.7.0",
    "debug": "^3.1.0",
    "electron-debug": "^1.5.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.4",
    "electron-unhandled": "^1.1.0",
    "first-run": "^1.2.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^4.0.2",
    "humanize": "^0.0.9",
    "lockfile": "^1.0.3",
    "moment": "^2.20.1",
    "mri": "^1.1.0",
    "ms": "^2.0.0",
    "nuka-carousel": "^2.3.0",
    "ooni-components": "^0.1.0-beta.6",
    "react-animations": "^0.1.0",
    "react-icons": "^2.2.5",
    "sqlite3": "^3.1.13",
    "styled-components": "^2.1.2"
  }
}
